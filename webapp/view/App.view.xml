<mvc:View
    controllerName="com.sap.excel.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}" busy="{viewModel>/busy}">
					<content>
                        <Button text="Excel Download" press=".onExcelDownload"></Button>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
